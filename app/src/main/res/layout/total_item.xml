<?xml version="1.0" encoding="utf-8"?>
<com.liuhonghao.com.trainlife.view.MyLineanerOut
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#fb7299"
        app:cardCornerRadius="2dp"
        app:cardElevation="6dp"
        >

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:id="@+id/item_live_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fb7299">

            <ImageView
                android:background="@drawable/uu"
                android:id="@+id/item_live_cover"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxLength="10"
                android:lines="2"
                android:textColor="#000000"
                android:textSize="10sp"
                android:text="你好"/>

            <LinearLayout
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="21dp"
                        android:src="@drawable/ic_play_circle_outline_black_24dp"/>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="10sp"
                        android:text="人数"
                        android:layout_gravity="center"/>
                </LinearLayout>


                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="21dp"
                    android:src="@drawable/ic_subtitles_black_24dp"
                    />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:text="弹幕"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</com.liuhonghao.com.trainlife.view.MyLineanerOut>
